<div class="container">
	<div class="col-md-10 col-md-offset-1" style="margin-top:12%;height:500px;border-radius: 10px;" >
		<div class="instruction">
			<h3><%= test.instruction %></h3>
		</div>
		<hr>
		<div class="question">
			<h4><%= test.question %></h4>
		</div>
		<form action="/quiz/answer" method="POST">
			<!-- answer options  -->
			<% for(answer in test.answers) { %>
				<label>
					<input type="radio" <% if(answer == test.right_answer){ %> value="True" <% }else{ %> value="False" <% } %> ><%= answer %>
				</label>
			<% } %>
			<input type="submit" value="Confirmar">
		</form>
	</div>
</div>

<!-- if wrong turn body background to red if right to blue -->